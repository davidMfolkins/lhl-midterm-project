<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create New Map</title>
  <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

  <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap" rel="stylesheet">
  <!-- <link rel="stylesheet" href="/styles/layout.css" type="text/css" /> -->
  <link rel="stylesheet" href="/styles/navbar.css" type="text/css" />
  <link rel="stylesheet" href="/styles/create-map.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <script src="https://kit.fontawesome.com/a076d05399.js"></script>
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <script type="text/javascript" src="/scripts/createMap.js"></script>
  <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAzhpPYg-ucwzqHgAPqZfYbXVnmsMazg2I&callback=initMap"></script>
</head>
<body>
  <%- include('partials/_navbar') %>
  <main>
    <div class='page-container'>
      <div class="map-form-scroll-container">
        <div class="map-form-container">
          <form id='lat-lngs' class='map-form'>
            <div class="create-button-container">
              <button type='submit' class='button-create'>Create</button>
            </div>
            <span class='err-msg'></span>
            <div class='title-desc-container'>
              <input type='text' id='map-title-js' name='map_title' placeholder='Map Title' class='map-input'>
              <input type='text' name='map_desc' placeholder='Map Description' class='map-input'>
            </div>
            <div class='input-heads'></div>
            <div class='mark-container'>
            </div>
          </form>
        </div>
      </div>
      <div class='map-container'>
        <div id='map'></div>
      </div>
    </div>
  </main>
</body>

</html>
